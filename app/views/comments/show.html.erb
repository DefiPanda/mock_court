<p id="notice"><%= notice %></p>

<p>
  <b>Event:</b>
  <%= @comment.event_id %>
</p>

<p>
  <b>Details:</b>
  <%= @comment.details %>
</p>

<p>
  <b>Username:</b>
  <%= @comment.username %>
</p>

<% if user_signed_in? %>
  <% if @comment.username == current_user.username %>
    <%= link_to "Edit", edit_comment_path(@comment) %>
    <%= link_to "Delete", @comment, :confirm => "Are you sure you want to delete this comment?", :method => :delete %> 
   <% end %>
<% end %>